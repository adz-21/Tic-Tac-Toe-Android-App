<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tic,tac,toe"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/aldrich"
        android:text="TIC"
        android:textColor="@color/purple"
        android:textSize="55sp"
        app:layout_constraintEnd_toStartOf="@+id/tac"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:fontFamily="@font/aldrich"
        android:text="TAC"
        android:textColor="@color/pink"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="@+id/tic"
        app:layout_constraintEnd_toStartOf="@+id/toe"
        app:layout_constraintStart_toEndOf="@+id/tic"
        app:layout_constraintTop_toTopOf="@+id/tic"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="TOE"
        android:textColor="@color/purple"
        android:textSize="55sp"
        app:layout_constraintBottom_toBottomOf="@+id/tac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tac"
        app:layout_constraintTop_toTopOf="@+id/tac" />


</androidx.constraintlayout.widget.ConstraintLayout>